<p id="notice"><%= notice %></p>

<h1>Remuneracoes</h1>

<table>
  <thead>
    <tr>
      <th>Funcionario</th>
      <th>Salario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @remuneracoes.each do |remuneracao| %>
      <tr>
        <td><%= remuneracao.funcionario_id %></td>
        <td><%= remuneracao.salario %></td>
        <td><%= link_to 'Show', remuneracao %></td>
        <td><%= link_to 'Edit', edit_remuneracao_path(remuneracao) %></td>
        <td><%= link_to 'Destroy', remuneracao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

